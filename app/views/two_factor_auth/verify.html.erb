<% provide(:title, "Two factor authentication check") %>

<h2 style="text-align: left !important; font-size: 1.9em !important">Two factor authentication check</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:otp, url: two_factor_login_verify_path) do |f| %>

            <%= f.label :otp, "Enter OTP" %>
            <%= f.text_field :otp, class: 'form-control' %>
            <%= f.hidden_field :twoFA_userId, value: @user.id %>  
            <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>